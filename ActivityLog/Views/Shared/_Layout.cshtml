@using Helpers;
<!DOCTYPE html>
<html>
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <meta name="description" content="AvegaCoach Acitivty log - a page where we log our activites. And demonstration tool for SpecFlow" />
    <meta name="keywords" content="BDD, SpecFlow, Avega, AvegaCoach" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title"><h1>Avega Coach Activity log</h1></div>

            <div id="menucontainer">
                <ul id="menu">
                    @Html.Raw(Html.MenuItem("Activities", "Index", "Activities"))
                    @Html.Raw(Html.MenuItem("Customers", "Index", "Customers"))
                    @Html.Raw(Html.MenuItem("People", "Index", "People"))
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
            <div id="footer">Avega Coach Activity log &copy; Copyright 2011 www.marcusoft.net</div>
        </div>
    </div>
</body>
</html>
