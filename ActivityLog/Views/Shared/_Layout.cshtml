<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <meta name="description" content="Description of your web page goes here." />
    <meta name="keywords" content="Keywords for you web page go here. Each keyword or group of keyword phrases are separated by a comma. Keep this  list short and relevant to the content and title of this specific page." />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="none">
        <a href="#maincontent">skip to the main content area of this page</a></div>
    <div class="content-container">
        <div class="logo">@Html.ActionLink("AvegaCoach Activites", "Activities")</div>
        <div class="nav-main">
            <ul>
                <li class="first active"><span class="active"></span>@Html.ActionLink("Activities", "Index", "Activities")</li>
                <li class="active">@Html.ActionLink("Customers", "Index", "Customers")</li>
                <li class="active">@Html.ActionLink("People", "Index", "People")</li>
            </ul>
        </div>
        <div class="content-main">
            <a name="maincontent" id="maincontent"></a>
            @RenderBody()
            <div class="clear">
            </div>
        </div>
        <div class="clear">
        </div>
        <div class="footer-container">
            <div class="nav-footer">
                <ul>
                    <li class="first"><a href="#">Home</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>
            <div class="copyright">
                &copy; 2010 www.marcusoft.net</div>
            <div class="clear">
            </div>
        </div>
    </div>
</body>
</html>
