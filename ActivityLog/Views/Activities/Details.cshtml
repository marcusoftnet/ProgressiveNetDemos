@model ActivityLog.Models.Activity

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Activity</legend>

    <div class="display-label">When</div>
    <div class="display-field">@String.Format("{0:g}", Model.When)</div>

    <div class="display-label">NumberOfHours</div>
    <div class="display-field">@Model.NumberOfHours</div>

    <div class="display-label">Who</div>
    <div class="display-field">@(Model.Who == null ? "None" : Model.Who.Name)</div>

    <div class="display-label">AtCustomer</div>
    <div class="display-field">@(Model.AtCustomer == null ? "None" : Model.AtCustomer.Name)</div>

    <div class="display-label">Heading</div>
    <div class="display-field">@Model.Heading</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ActivityId }) |
    @Html.ActionLink("Back to List", "Index")
</p>


