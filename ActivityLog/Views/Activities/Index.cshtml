@model IEnumerable<ActivityLog.Models.Activity>
@{
    ViewBag.Title = "Index";
}
<h2>Activities</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table width="100%" border="0" cellpadding="0" cellspacing="0" class="data-table">
    <tr>
        <th scope="col">
        </th>
        <th scope="col">
            When
        </th>
        <th scope="col">
            Number of hours
        </th>
        <th scope="col">
            Who
        </th>
        <th scope="col">
            Customer
        </th>
        <th scope="col">
            Heading
        </th>
        <th scope="col">
            Description
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ActivityId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ActivityId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ActivityId })
            </td>
            <td>
                @String.Format("{0:g}", item.When)
            </td>
            <td>
                @item.NumberOfHours
            </td>
            <td>
                @(item.Who == null ? "None" : item.Who.Name)
            </td>
            <td>
                @(item.AtCustomer == null ? "None" : item.AtCustomer.Name)
            </td>
            <td>
                @item.Heading
            </td>
            <td>
                @item.Description
            </td>
        </tr>
    }
</table>
