@model ActivityLog.Models.Person

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Person</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Company</div>
    <div class="display-field">@Model.Company</div>

    <div class="display-label">Manages</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Manages).ToString()</div>

    <div class="display-label">Manager</div>
    <div class="display-field">@(Model.Manager == null ? "None" : Model.Manager.Name)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


